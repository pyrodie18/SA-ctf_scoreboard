<dashboard refresh="60" hideTitle="false">
  <search id="base" ref="24hrActivtyReport"></search>
  <label>Event Activity</label>
  <row>
    <panel>
      <html>
      
        <title>Event Activity</title>
        <div>
          <img style="height: 100px;" src="/static/app/SA-ctf_scoreboard/ctflogo.png"/>
          <h1 style="font-size:36pt;text-align:center;position:absolute;top:50%;left:50%;transform:translateX(-50%)translateY(-50%);">
		      Event Activity
          </h1>
        </div>
      </html>
    </panel>
  </row>
  <row>
    <panel>
      <single>
        <title>Most Recent Activity</title>
        <search base="base">
          <query>
            | sort _ _time 
            | head limit=1 
            | table User
          </query>
        </search>
        <option name="colorBy">value</option>
        <option name="colorMode">block</option>
        <option name="drilldown">none</option>
        <option name="numberPrecision">0</option>
        <option name="rangeColors">["0x65a637","0x6db7c6","0xf7bc38","0xf58f39","0xd93f3c"]</option>
        <option name="rangeValues">[0,30,70,100]</option>
        <option name="showSparkline">1</option>
        <option name="showTrendIndicator">1</option>
        <option name="trendColorInterpretation">standard</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="unitPosition">after</option>
        <option name="useColors">1</option>
        <option name="useThousandSeparators">1</option>
      </single>
    </panel>
    <panel>
      <single>
        <title>Most Active Team</title>
        <search base="base">
          <query>
            | stats count by User
            | sort - count 
            | head limit=1 
            | table User
          </query>
        </search>
        <option name="colorBy">value</option>
        <option name="colorMode">block</option>
        <option name="drilldown">none</option>
        <option name="numberPrecision">0</option>
        <option name="rangeColors">["0x65a637","0x6db7c6","0xf7bc38","0xf58f39","0xd93f3c"]</option>
        <option name="rangeValues">[0,30,70,100]</option>
        <option name="showSparkline">1</option>
        <option name="showTrendIndicator">1</option>
        <option name="trendColorInterpretation">standard</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="unitPosition">after</option>
        <option name="useColors">1</option>
        <option name="useThousandSeparators">1</option>
      </single>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>Recent Activity</title>
        <search base="base">
          <query></query>
        </search>
        <option name="count">15</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">none</option>
        <option name="rowNumbers">false</option>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>
</dashboard>